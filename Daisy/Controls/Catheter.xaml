<UserControl x:Class="Daisy.Controls.Catheter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Daisy.Controls"
             x:Name="_this"
             mc:Ignorable="d">


    <ItemsControl 
        ItemsSource="{Binding Electrodes}" 
        Height="{Binding Height, ElementName=_this}" 
        Width="{Binding Width, ElementName=_this}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <controls:CircularPanel/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <controls:Electrode/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
